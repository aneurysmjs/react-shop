{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"]
    },
    "outDir": "dist",
    "module": "esnext",
    "target": "ES6",
    "types": ["node", "vitest/jsdom", "vitest/globals"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["DOM", "ES5", "ES6"],
    "downlevelIteration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "exclude": ["node_modules", "build"]
}
