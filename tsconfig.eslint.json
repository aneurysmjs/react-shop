{
  // extend your base config to share compilerOptions, etc
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true
  },
  "include": [
    "eslint.config.mjs",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "config/**/*.ts"
  ]
}
