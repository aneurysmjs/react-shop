{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind", "mixin", "include", "at-root", "layer", "apply"]
      }
    ],
    "block-no-empty": null,
    "selector-class-pattern": null
  }
}
